/* pages/order/index.wxss */
.purchaseList, .sellList{
  display: block;
  width: 750rpx;
  padding-top: 30rpx;
}
.purchaseList .title, .sellList .title{
  display: block;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: #999;
  border-bottom: 1rpx solid #e9eaec;
}
.purchaseList .item, .sellList .item{
  display: block;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #e9eaec;
  background-color: #fff;
  font-size: 32rpx;
  
  color: #333;
  position: relative;
}
.purchaseList .item .label, .sellList .item .label{
  display: block;
  min-width: 60rpx;
  padding: 5rpx;
  background-color: #bbb;
  border-radius: 34rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  position: absolute;
  right: 70rpx;
  top: 50%;
  transform: translateY(-50%);
}